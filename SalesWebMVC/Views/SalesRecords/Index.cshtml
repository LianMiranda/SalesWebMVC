@{
    ViewData["Title"] = "Index";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="SimpleSearch">
                    <h5 class="card-title">Simple Search</h5>
                    <div class="form-group mb-3">
                        <label for="minDate">Min Date</label>
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                    <div class="form-group mb-3">
                        <label for="maxDate">Max Date</label>
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                    <button class="btn btn-primary" type="submit">Search</button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="GroupingSearch">
                    <h5 class="card-title">Grouping Search</h5>
                    <div class="form-group mb-3">
                        <label for="minDate">Min Date</label>
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                    <div class="form-group mb-3">
                        <label for="maxDate">Max Date</label>
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                    <button class="btn btn-primary" type="submit">Search</button>
                </form>
            </div>
        </div>
    </div>
</div>
